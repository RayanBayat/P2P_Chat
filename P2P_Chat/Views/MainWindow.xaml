<Window x:Class="P2P_Chat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2P_Chat.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="100" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>


        <TextBox Text="{Binding Path=MessageToSend}"></TextBox>
        <Button Grid.Row="0" Grid.Column="1" Command="{Binding PushCommand}" >Send Message!</Button>
        <TextBox  Grid.Row="1" Grid.Column="0" Text="{Binding Path=ToIP}"></TextBox>
        <Button Grid.Row="1" Grid.Column="2" Command="{Binding ToIPCommand}" >Type Ip</Button>

    </Grid>
</Window>
